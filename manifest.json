{
    "manifest_version": 3,
    "name": "Mudra Choreographer",
    "description": "choreograph kuchipudi hasta mudras for audio transcript",
    "version": "1.0",
    "permissions": ["activeTab", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "images/hello_extensions.png"
    },
    "background" :{
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }

  